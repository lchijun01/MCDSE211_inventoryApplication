<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice <%= invoice.invoice_number %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    .invoice-container {
      width: 210mm;
      height: 296.7mm;
      padding: 10mm;
      border: 1px solid #ddd;
      margin: 0 !important;
      background-color: #fff;
    }
    .header, .footer {
      text-align: center;
      padding: 10px 0;
    }
    .header {
      border-bottom: 2px solid #333;
    }
    .footer {
      border-top: 1px solid #ddd;
      position: absolute;
      bottom: 10mm;
      width: 90%;
    }
    .invoice-details {
      margin: 10mm 0;
    }
    .invoice-details table {
      width: 100%;
      border-collapse: collapse;
    }
    .invoice-details th, .invoice-details td {
      padding: 10px;
      text-align: left;
      border: 1px solid #ddd;
    }
    .invoice-summary {
      text-align: right;
      margin-top: 20px;
    }
    .invoice-summary table {
      width: 100%;
      border-collapse: collapse;
    }
    .invoice-summary th, .invoice-summary td {
      padding: 10px;
      text-align: right;
      border: 1px solid #ddd;
    }
  </style>
</head>
<body>
  <div class="invoice-container" data-invoice-number="<%= invoice.invoice_number %>">
    <div class="header">
      <h1>Invoice</h1>
    </div>
    <div class="invoice-details">
      <table>
        <tr>
          <th>Invoice Number:</th>
          <td><%= invoice.invoice_number %></td>
        </tr>
        <tr>
          <th>Buyer Name:</th>
          <td><%= invoice.buyer_name %></td>
        </tr>
        <tr>
          <th>Sales Date:</th>
          <td><%= new Date(invoice.sales_date).toISOString().slice(0, 10) %></td>
        </tr>
      </table>
    </div>
    <h2>Product Details</h2>
    <table class="invoice-details">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% invoice.products.forEach(function(product) { %>
          <tr>
            <td><%= product.product %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price.toFixed(2) %></td>
            <td><%= (product.quantity * product.price).toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="invoice-summary">
      <table>
        <tr>
          <th>Total Amount:</th>
          <td><%= invoice.total_amount.toFixed(2) %></td>
        </tr>
      </table>
    </div>
    <div class="footer">
      <p>Thank you for your business!</p>
    </div>
  </div>
</body>
</html>
