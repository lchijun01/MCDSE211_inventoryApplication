<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <link href="style.css" type="text/css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
        <title>Yong&Yi-Expenses Record</title>
        <script>
            if ( window.history.replaceState ) {
              window.history.replaceState( null, null, window.location.href );
            }
        </script>
    </head>
    <body class="main-contents">
        <%- include('partials/nav'); %>
        <main class="main-content">
          <h1>Yong&Yi Expenses Record Page</h1>

          <form style="display: flex;" id="yyexpenses-form" method="POST" action="/yyexpenses-record" enctype="multipart/form-data">
              <div>
                <label class="form_name" for="date">Date</label>
                <input class="form_id" type="date" name="date" required><br>
                <label class="form_name" for="invoice_no">Invoice No.</label>
                <input class="form_id" type="text" name="invoice_no" id="invoice_no" placeholder=" Optional"><br>
                <label class="form_name" for="category">Category</label>
                <select class="form_id" name="category" required>
                    <option value="">Select a category</option>
                    <option value="Allowance">Allowance</option>
                    <option value="Bank Charges">Bank Charges</option>
                    <option value="Custom Duties">Custom Duties</option>
                    <option value="Electricity & Water">Electricity & Water</option>
                    <option value="EPF">EPF</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Hardware & Tools">Hardware & Tools</option>
                    <option value="Handling Expenses">Handling Expenses</option>
                    <option value="Office Equipment">Office Equipment</option>
                    <option value="Printing & Stationery">Printing & Stationery</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Postage & Courier">Postage & Courier</option>
                    <option value="Rental of Shop">Rental of Shop</option>
                    <option value="Registration of Shop">Registration of Shop</option>
                    <option value="Salary">Salary</option>
                    <option value="SOCSO & SIP">SOCSO & SIP</option>
                    <option value="Staff Welfare">Staff Welfare</option>
                    <option value="Small Value Assets">Small Value Assets</option>
                    <option value="Sewage Charges">Sewage Charges</option>
                    <option value="Sundry Expenses">Sundry Expenses</option>
                    <option value="Wages">Wages</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                </select><br>
                <label class="form_name" for="bank">Bank</label>
                <select class="form_id" name="bank" required>
                    <option value="HongLeongBank">Hong Leong Bank</option>
                </select><br>
                <label class="form_name" for="name">Name</label>
                <select class="form_id" id="name" name="name">
                  <option value="">Choose a Name</option>
                  <option value="Gdex">Gdex</option>
                  <option value="other">Other</option>
                </select>
                <input class="form_id" type="text" id="othername" name="othername" style="display: none;"><br>
                <label class="form_name" for="amount">Amount</label>
                <input class="form_id" type="number" step="0.01" name="amount" required><br>
                <div style="display: flex; align-items: center;">
                  <label class="form_name" style="font-weight: bold;">Accrued ?</label>
                  <div style="padding-top: 15px;">
                    <div class="form-check" style="padding-right: 15px;">
                      <input class="form-check-input" type="radio" name="Accrued" id="Accrued" value="yes">
                      <label class="form-check-label" for="Accrued">
                        yes
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="Accrued" id="noAccrued" value="no">
                      <label class="form-check-label" for="noAccrued">
                        no
                      </label>
                    </div>
                  </div>
                </div>
                <label class="form_name" for="detail">Details</label><br>
                <textarea class="form_detail" type="text" name="detail"></textarea><br>
                <label class="formfile_name" for="file">File</label>
                <input class="form_file" type="file" name="file" id="file-input"><br><br>
                <div class="button">
                    <button class="form_button" type="submit">Submit</button>
                    <button class="form_button" type="reset">Clear</button>
                </div>
              </div>
              <div>
                <table class="table table-striped" style="width: 100%;margin-left: 100px;">
                  <thead>
                    <tr>
                      <th>Category</th>
                      <th>Total Amount</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let categoryTotals = {} %>
                    <% data.forEach(function(row) {
                      const category = row.Category;
                      const amount = parseFloat(row.Amount);
                      if (!isNaN(amount)) {
                        if (category in categoryTotals) {
                          categoryTotals[category] += amount;
                        } else {
                          categoryTotals[category] = amount;
                        }
                      }
                    }); %>
                    <% Object.keys(categoryTotals).forEach(function(category) { %>
                      <tr>
                        <td><%= category %></td>
                        <td>RM <%= categoryTotals[category].toFixed(2) %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <% let total = 0 %>
                      <% data.forEach(function(row) {
                        const amount = parseFloat(row.Amount);
                        if (!isNaN(amount)) {
                          total += amount;
                        }
                      }); %>
                      <th class="text-end">Total Amount : </th>
                      <th>RM <%= total.toFixed(2) %></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
          </form><br>
          <table  class="table table-striped" style="width: 90%;">
            <thead>
              <tr>
                <th>Date</th>
                <th>Invoice No</th>
                <th>Category</th>
                <th>Bank</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Detail</th>
                <th>File</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(row) { %>
                <tr>
                  <td><%= row.formattedDate %></td>
                  <td><%= row.Invoice_No %></td>
                  <td><%= row.Category %></td>
                  <td><%= row.Bank %></td>
                  <td><%= row.Name %></td>
                  <td><%= row.Amount %></td>
                  <td><%= row.Detail %></td>
                  <td><%= row.File %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </main>
        <script>
          $(document).ready(function() {
            // Hide the input field initially
            $('#othername').hide();
        
            // Show the input field if user selects "Other"
            $('#name').on('change', function() {
              if ($(this).val() === 'other') {
                $('#othername').show();
              } else {
                $('#othername').hide();
              }
            });
          });
        </script>
        <script>
            document.getElementById('yyexpenses-form').addEventListener('submit', async (event) => {
          event.preventDefault();
        
          const form = document.getElementById('yyexpenses-form');
          const formData = new FormData(form);
        
          const fileInput = document.getElementById('file-input');
          const file = fileInput.files[0];
        
          if (!file) {
            alert('Please select a file to upload');
            return;
          }
        
          try {
            // Send form data to your server-side code
            await fetch('/yyexpenses-record', {
              method: 'POST',
              body: formData,
            });
        
            // Get the invoice number from the form
            const invoiceNumber = document.getElementById('invoice_no').value;
        
            // Send the image file to Discord
            const discordFormData = new FormData();
            discordFormData.append('file', file, file.name);
            discordFormData.append('payload_json', JSON.stringify({
              content: `Invoice Number: ${invoiceNumber}`,
            }));
        
            await fetch('https://discord.com/api/webhooks/1091277263783346227/QaQPz95gaHcXXDEUVyO5-64ec7XxqLtTIo-CPJf9vO5bqkAerXdmncTN8DbnDI-vbmtr', {
              method: 'POST',
              body: discordFormData,
            });
        
            alert('Data saved and file sent to Discord');
            location.reload();
          } catch (error) {
            console.error(error);
            alert('An error occurred');
          }
        });
        </script>
    </body>
</html>