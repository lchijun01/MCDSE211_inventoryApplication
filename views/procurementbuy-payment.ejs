<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <link href="style.css" type="text/css" rel="stylesheet">
        <title>Procurement Buy - Payment Breakdown</title>
        <script>
            if ( window.history.replaceState ) {
              window.history.replaceState( null, null, window.location.href );
            }
        </script>
    </head>
    <body class="main-contents">
        <%- include('partials/nav'); %>
        <main class="main-content">
            <% if (invoiceData.length === 0) { %>
                <p>All settle</p>
            <% } else { %>
                <table class="table table-striped" style="width: 90%;">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Invoice</th>
                        <th>Name</th>
                        <th>Total Amount</th>
                        <th>Total Paid</th>
                        <th>Status</th>
                        <th>Overpaid Amount</th>
                        <th>Need to Pay Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% invoiceData.forEach(function(invoice) { %>
                        <tr>
                            <td><%= invoice.formattedbuyDate %></td>
                            <td><%= invoice.buyinvoice %></td>
                            <td><%= invoice.name %></td>
                            <td><%= invoice.totalAmount.toFixed(2) %></td>
                            <td><%= invoice.totalPaid %></td>
                            <td><%= invoice.status %></td>
                            <td><%= (invoice.status === 'Overpaid' ? Math.abs(invoice.totalAmount - invoice.totalPaid) : 0).toFixed(2) %></td>
                            <td><%= (invoice.status === 'Need to Pay' ? invoice.totalAmount - invoice.totalPaid : 0).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
                </table>
            <% } %>
            <div style="display: flex;justify-content: space-between;width: 80%;">
                <h1>Procurement Buy - Payment Breakdown</h1>
                <form action="/procurementBuypayment_search" method="get" class="d-flex mt-4">
                    <input type="search" name="invoice_number" style="width: 250px;" class="form-control me-2" placeholder="Enter Invoice Number" aria-label="Search">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <form id="procurementbuypayment-form" method="POST" action="/procurementbuy-payment" enctype="multipart/form-data">
                <label class="form_name" for="date">Date</label>
                <input class="form_id" type="date" name="date" required><br>
                <label class="form_name" for="invoice_no">Invoice No.</label>
                <input id="invoice_no" class="form_id" type="text" name="invoice_no" placeholder=" 8888" required><br>
                <label class="form_name" for="name">Name</label>
                <input class="form_id" type="text" name="name" required><br>
                <label class="form_name" for="amount">Amount</label>
                <input class="form_id" type="number" step="0.01" name="amount" placeholder=" RM" required><br>
                <label class="form_name" for="remarks">Remarks</label><br>
                <textarea class="form_detail" type="text" name="remarks"></textarea><br>
                <label for="bankref">Bank References</label><br>
                <textarea class="form_detail" type="text" name="bankref"></textarea><br>
                <label class="formfile_name" for="file">File</label>
                <input class="form_file" id="file-input" type="file" name="file" accept="image/*"><br><br>
                <div class="button">
                    <button class="form_button" type="submit">Submit</button>
                    <button class="form_button" type="reset">Clear</button>
                </div>
            </form>
            <br>
            <% if (paymentBreakdownData.length === 0) { %>
                <p>No payment breakdown data available.</p>
            <% } else { %>
            <table class="table table-striped" style="width: 90%;">
                <thead>
                    <tr>
                    <th>Date</th>
                    <th>Invoice</th>
                    <th>name</th>
                    <th>Amount</th>
                    <th>Remarks</th>
                    <th>Bank References</th>
                    </tr>
                </thead>
                <tbody>
                <% paymentBreakdownData.forEach(function(payment) { %>
                <tr>
                    <td><%= payment.formattedDate %></td>
                    <td><%= payment.buyinvoice %></td>
                    <td><%= payment.name %></td>
                    <td><%= payment.amount %></td>
                    <td><%= payment.remarks %></td>
                    <td><%= payment.bankrefs %></td>
                </tr>
                <% }); %>
                </tbody>
            </table>
          <% } %>
        </main>
        <script>
            document.getElementById('procurementbuypayment-form').addEventListener('submit', async (event) => {
          event.preventDefault();
        
          const form = document.getElementById('procurementbuypayment-form');
          const formData = new FormData(form);
        
          const fileInput = document.getElementById('file-input');
          const file = fileInput.files[0];
        
          if (!file) {
            alert('Please select a file to upload');
            return;
          }
        
          try {
            // Send form data to your server-side code
            await fetch('/procurementbuy-payment', {
              method: 'POST',
              body: formData,
            });
        
            // Get the invoice number from the form
            const invoiceNumber = document.getElementById('invoice_no').value;
        
            // Send the image file to Discord
            const discordFormData = new FormData();
            discordFormData.append('file', file, file.name);
            discordFormData.append('payload_json', JSON.stringify({
              content: `Invoice Number: ${invoiceNumber}`,
            }));
        
            await fetch('https://discord.com/api/webhooks/1124468421610971207/1wjQTzxVfFoRc1poA8rE4x6jU0NtTq9sWBF2rpgWP2xnQ-eDKyPSU5j4KAkjGLdDPUwR', {
              method: 'POST',
              body: discordFormData,
            });
        
            alert('Data saved and file sent to Discord');
            location.reload();
          } catch (error) {
            console.error(error);
            alert('An error occurred');
          }
        });
        </script>
    </body>
</html>
