                <label class="form_name" style="margin-bottom: 3px;" for="discount">Discount</label>
                <input class="form_id" style="margin-bottom: 3px;" type="number" name="discount" placeholder="how much!"><br>
                <label class="form_name" style="margin-bottom: 3px;" for="buydate">Purchase Date</label>
                <input class="form_id" style="margin-bottom: 3px;" type="date" name="buydate" required><br><br>
                <div class="button">
                    <button class="form_button" type="submit">Submit</button>
                    <button class="form_button" type="reset">Clear</button>
                </div>
            </div>
            <div style="padding-left: 30px;">
