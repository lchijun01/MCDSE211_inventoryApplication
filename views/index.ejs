<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>Home-Dashboard</title>
    <style>
        main {
        padding-left: 280px;
        position: relative;
        }

        .chart-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* Two columns */
            gap: 20px;
            padding: 20px;
        }

        .chart-container {
            width: 100%;
            max-width: 600px;
            margin: auto;
            height: 400px;
        }
        
        #a {
            margin: 0.5rem 1rem;
        }

        h1 {
            padding-top: 100px;
        }
        
        .active-container {
            padding: 20px 40px 20px 20px;
        }

        .active-container-form {
            box-shadow: 0 4px 8px;
            border-radius: 5px;
            padding: 20px;
            height: 65vh;
        }

        .table-container {
            display: flex;
            flex-wrap: wrap; /* Allows tables to wrap into new rows */
            gap: 20px; /* Space between tables */
            width: 100%;
            max-height: calc(65vh - 90px); /* Set a fixed or maximum height */
            overflow: auto;
        }

        .table-container .table {
            flex: 1 1 300px; /* Grow to fill space, shrink to 300px, initial width 300px */
            min-width: 200px; /* Minimum width to prevent tables from getting too small */
            max-width: 100%; /* Ensures tables donâ€™t exceed the container width */
        }
    </style>
</head>
<body class="main-contents">
    <%- include('partials/nav'); %>
    <main class="main-content">
        <div><h1>Dashboard</h1></div>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
                <input type="radio" name="options" id="option1" autocomplete="off" checked> Profit & Loss
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"> Trial Balance
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option3" autocomplete="off"> Balance Sheet
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option4" autocomplete="off"> Bank Ledger
            </label>
        </div>
        <div class="active-container">
            <div id="profitLoss" style="display: block;">
                <%- include('profit&loss'); %>
            </div>
            <div id="trialBalance" style="display: none;">
                <%- include('trial_balance'); %>
            </div>
            <div id="balanceSheet" style="display: none;">
                <%- include('balance_sheet'); %>
            </div>
            <div id="bankLedger" style="display: none;">
                <%- include('bank_ledger'); %>
            </div>
        </div>

        <script>
            $(document).ready(function() {
                // Show corresponding content based on selected radio button
                $('input[name="options"]').change(function() {
                    var selectedOption = $('input[name="options"]:checked').attr('id');

                    // Hide all content divs
                    $('#profitLoss, #trialBalance, #balanceSheet, #bankLedger').hide();

                    // Show the selected content
                    if (selectedOption === 'option1') {
                        $('#profitLoss').show();
                    } else if (selectedOption === 'option2') {
                        $('#trialBalance').show();
                    } else if (selectedOption === 'option3') {
                        $('#balanceSheet').show();
                    } else if (selectedOption === 'option4') {
                        $('#bankLedger').show();
                    }
                });
            });
        </script>

        <div class="chart-grid">
            <div class="chart-container">
                <canvas id="salesLineChart"></canvas>
            </div>

            <div class="chart-container">
                <canvas id="categoryPieChart"></canvas>
            </div>

            <div class="chart-container">
                <canvas id="inventoryBarChart"></canvas>
            </div>

            <div class="chart-container">
                <canvas id="satisfactionDoughnutChart"></canvas>
            </div>

            <div class="chart-container">
                <canvas id="topProductsBarChart"></canvas>
            </div>
        </div>
        <script>
            var ctx = document.getElementById('salesLineChart').getContext('2d');
            var salesLineChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                    datasets: [{
                        label: 'Monthly Sales',
                        data: [1500, 2000, 1800, 2200, 3000, 2500, 2700],
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true
                        }
                    }
                }
            });

            var ctx = document.getElementById('categoryPieChart').getContext('2d');
            var categoryPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Electronics', 'Clothing', 'Books', 'Home Appliances', 'Toys'],
                    datasets: [{
                        data: [300, 50, 100, 80, 150],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true
                }
            });

            var ctx = document.getElementById('inventoryBarChart').getContext('2d');
            var inventoryBarChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Laptops', 'Smartphones', 'Tablets', 'Monitors', 'Keyboards'],
                    datasets: [{
                        label: 'Stock Level',
                        data: [100, 150, 75, 50, 200],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    responsive: true
                }
            });

            var ctx = document.getElementById('satisfactionDoughnutChart').getContext('2d');
            var satisfactionDoughnutChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Very Satisfied', 'Satisfied', 'Neutral', 'Dissatisfied', 'Very Dissatisfied'],
                    datasets: [{
                        data: [40, 35, 15, 5, 5],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true
                }
            });

            var ctx = document.getElementById('topProductsBarChart').getContext('2d');
            var topProductsBarChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'],
                    datasets: [{
                        label: 'Sales',
                        data: [500, 400, 300, 200, 100],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true
                        }
                    },
                    responsive: true
                }
            });
        </script>
    </main>
</body>
</html>
